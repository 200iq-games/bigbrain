{
	"name": "monarch-engine",
	"version": "0.4.0-dev.57",
	"description": "concept game engine",
	"main": "dist",
	"types": "dist/index.d.ts",
	"scripts": {
		"prepare": "run-s build",
		"start": "http-server dist",
		"build": "run-s build-clean build-index build-library && run-p build-styles build-pages build-bundle-global build-bundle-slate build-bundle-propshop && run-p build-lint test && echo ✔ done production build",
		"build:debug": "run-s build-clean build-index build-library && run-p build-styles build-pages build-bundle-global:debug build-bundle-slate:debug build-bundle-propshop:debug && run-p build-lint && echo ✔ done debug build",
		"build-clean": "rimraf dist && mkdirp dist dist/slate dist/propshop",
		"build-index": "barrelsby --exclude \".+\\.(test|bundle).*\" --delete --directory source && replace \";\" \"\" source/index.ts --silent",
		"build-library": "tsc",
		"build-lint": "tslint -c tslint.json -e 'types/**' 'source/**/*.ts'",
		"build-bundle-global": "browserify -p [ tsify ] source/monarch-global.bundle.ts > dist/monarch-global.bundle.js",
		"build-bundle-global:debug": "browserify --debug -p [ tsify ] source/monarch-global.bundle.ts > dist/monarch-global.bundle.js",
		"build-bundle-slate": "browserify -p [ tsify ] source/slate/slate-script.bundle.ts > dist/slate/slate-script.bundle.js",
		"build-bundle-slate:debug": "browserify --debug -p [ tsify ] source/slate/slate-script.bundle.ts > dist/slate/slate-script.bundle.js",
		"build-bundle-propshop": "browserify -p [ tsify ] source/propshop/propshop-script.bundle.ts > dist/propshop/propshop-script.bundle.js",
		"build-bundle-propshop:debug": "browserify --debug -p [ tsify ] source/propshop/propshop-script.bundle.ts > dist/propshop/propshop-script.bundle.js",
		"build-styles": "sass --source-map source/monarch-style.scss dist/monarch-style.css",
		"build-pages": "pug source -o dist",
		"test": "jest --verbose"
	},
	"files": [
		"dist",
		"source",
		"types",
		"index.html",
		"style.css"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/monarch-games/engine.git"
	},
	"author": "Chase Moskal",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/monarch-games/engine/issues"
	},
	"homepage": "https://github.com/monarch-games/engine#readme",
	"devDependencies": {
		"barrelsby": "1.0.2",
		"browserify": "16.2.2",
		"create-index": "2.3.0",
		"http-server": "0.11.1",
		"mkdirp": "0.5.1",
		"npm-run-all": "4.1.3",
		"pug-cli": "1.0.0-alpha6",
		"replace": "1.0.0",
		"rexreplace": "4.0.1",
		"rimraf": "2.6.2",
		"sass": "1.13.2",
		"tsify": "4.0.0",
		"tslint": "5.11.0",
		"typescript": "2.9.2"
	},
	"dependencies": {
		"@types/jest": "23.3.1",
		"babylonjs": "3.2.0",
		"cannon": "0.6.2",
		"deep-freeze": "0.0.1",
		"earcut": "2.1.3",
		"jest": "23.5.0",
		"jsondiffpatch": "0.3.11",
		"mobx": "5.0.4",
		"mobx-preact": "3.0.0",
		"nipplejs": "0.7.1",
		"oimo": "1.0.9",
		"preact": "8.3.1",
		"uuid": "3.3.2"
	}
}
