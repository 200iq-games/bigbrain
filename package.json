{
	"name": "monarch-engine",
	"version": "0.4.0-dev.51",
	"description": "concept game engine",
	"main": "dist",
	"types": "dist/index.d.ts",
	"scripts": {
		"clean": "rimraf dist && mkdirp dist",
		"build": "run-s clean && run-p build-library build-global && run-s lint && echo ✔ done production build",
		"build-debug": "run-s clean build-global-debug lint && echo ✔ done debug build",
		"build-library": "tsc",
		"build-global": "browserify -p [ tsify ] source/global.ts > dist/global.bundle.js",
		"build-global-debug": "browserify --debug -p [ tsify ] source/global.ts > dist/global.bundle.js",
		"lint": "tslint -c tslint.json -e 'types/**' 'source/**/*.ts'",
		"start": "http-server",
		"test": "jest --verbose",
		"prepare": "npm run build -s && npm test -s"
	},
	"files": [
		"dist",
		"source",
		"types",
		"index.html",
		"style.css"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/monarch-games/engine.git"
	},
	"author": "Chase Moskal",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/monarch-games/engine/issues"
	},
	"homepage": "https://github.com/monarch-games/engine#readme",
	"devDependencies": {
		"browserify": "16.2.2",
		"http-server": "0.11.1",
		"mkdirp": "0.5.1",
		"npm-run-all": "4.1.3",
		"rimraf": "2.6.2",
		"tsify": "4.0.0",
		"tslint": "5.11.0",
		"typescript": "2.9.2"
	},
	"dependencies": {
		"@types/jest": "23.3.1",
		"babylonjs": "3.2.0",
		"cannon": "0.6.2",
		"deep-freeze": "0.0.1",
		"earcut": "2.1.3",
		"jest": "23.5.0",
		"jsondiffpatch": "0.3.11",
		"mobx": "5.0.4",
		"mobx-preact": "3.0.0",
		"nipplejs": "0.7.1",
		"oimo": "1.0.9",
		"preact": "8.3.1",
		"uuid": "3.3.2"
	}
}
