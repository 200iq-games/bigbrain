{
	"name": "monarch-engine",
	"version": "0.4.0-dev.76",
	"description": "concept game engine",
	"main": "dist",
	"types": "dist/index.d.ts",
	"scripts": {
		"prepare": "run-p build",
		"start": "http-server",
		"build": "run-p build-clean && run-p build-importmap build-copy build-index && run-p build-scripts build-styles build-pages && echo ✔ done production build",
		"build:debug": "run-p build-clean && run-p build-importmap build-copy build-index && run-p build-scripts:debug build-styles build-pages:debug && echo ✔ done debug build",
		"build-clean": "rimraf dist && mkdirp dist",
		"build-copy": "ncp .nojekyll dist/.nojekyll && ncp CNAME dist/CNAME && ncp assets dist/assets && ncp node_modules/@babylonjs dist/@babylonjs",
		"build-index": "barrelsby --exclude \".+\\.(test|bundle).*\" --delete --directory source && replace '\";$' '.js\"' source/index.ts --silent",
		"build-importmap": "importly generate > dist/importmap.json",
		"build-scripts": "run-p build-library && run-p build-lint test",
		"build-scripts:debug": "run-p build-library:debug",
		"old--build-scripts": "run-p build-library build-demo-bundle build-global-bundle && run-p build-lint test",
		"old--build-scripts:debug": "run-p build-library:debug build-demo-bundle:debug build-global-bundle:debug",
		"build-library": "tsc",
		"build-library:debug": "tsc --target esnext",
		"build-demo-bundle": "browserify -p [ tsify ] -g [envify NODE_END production] source/monarch-demo.bundle.ts > dist/monarch-demo.big.js && uglifyjs < dist/monarch-demo.big.js > dist/monarch-demo.js",
		"build-demo-bundle:debug": "browserify --debug -p [ tsify ] source/monarch-demo.bundle.ts > dist/monarch-demo.js",
		"build-global-bundle": "browserify -p [ tsify ] -g [ envify --NODE_ENV production ] source/monarch-global.bundle.ts > dist/monarch-global.big.js && uglifyjs < dist/monarch-global.big.js > dist/monarch-global.js",
		"build-global-bundle:debug": "browserify --debug -p [ tsify ] source/monarch-global.bundle.ts > dist/monarch-global.js",
		"build-lint": "tslint -c tslint.json -e 'types/**' 'source/**/*.ts'",
		"build-styles": "sass --source-map source/monarch-style.scss dist/monarch-style.css",
		"build-pages": "pug source -o dist",
		"build-pages:debug": "pug --pretty source -o dist",
		"watch": "run-p watch-styles watch-pages watch-ts",
		"watch-styles": "npm run build-styles -s -- --watch",
		"watch-pages": "npm run build-pages:debug -s -- --watch",
		"watch-ts": "npm-watch",
		"test": "jest --verbose"
	},
	"watch": {
		"build-scripts:debug": {
			"patterns": [
				"source"
			],
			"extensions": "ts,tsx",
			"ignore": "source/index.ts"
		}
	},
	"files": [
		"dist",
		"source",
		"types"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/monarch-games/engine.git"
	},
	"author": "Chase Moskal",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/monarch-games/engine/issues"
	},
	"homepage": "https://github.com/monarch-games/engine#readme",
	"devDependencies": {
		"@types/jest": "24.0.11",
		"barrelsby": "2.0.0",
		"browserify": "16.2.3",
		"create-index": "2.4.0",
		"envify": "4.1.0",
		"jest": "24.5.0",
		"http-server": "0.11.1",
		"importly": "0.0.0-dev.1",
		"mkdirp": "0.5.1",
		"ncp": "2.0.0",
		"npm-run-all": "4.1.5",
		"npm-watch": "0.6.0",
		"pug-cli": "1.0.0-alpha6",
		"replace": "1.1.0",
		"rimraf": "2.6.3",
		"sass": "1.17.3",
		"tsify": "4.0.1",
		"tslint": "5.14.0",
		"typescript": "3.3.4000",
		"uglify-es": "3.3.9",
		"uglifyify": "5.0.1"
	},
	"dependencies": {
		"@babylonjs/core": "4.0.0-alpha.33",
		"cannon": "0.6.2",
		"deep-freeze": "0.0.1",
		"earcut": "2.1.5",
		"jsondiffpatch": "0.3.11",
		"mobx": "5.9.0",
		"mobx-preact": "3.0.0",
		"nanoid-esm": "2.1.0-esm.4",
		"nipplejs": "0.8.1",
		"oimo": "1.0.9",
		"preact": "8.4.2",
		"simplex-noise-esm": "2.5.0-esm.0"
	}
}
