{
	"name": "monarch-engine",
	"version": "0.4.0-dev.29",
	"description": "concept game engine",
	"main": "dist/monarch",
	"types": "dist/monarch.d.ts",
	"scripts": {
		"build": "rimraf dist && run-p build-library build-common lint && echo ✔ done production build",
		"build-debug": "rimraf dist && run-p build-library build-common-debug lint && echo ✔ done debug build",
		"build-library": "tsc",
		"build-common": "mkdirp dist/common/ && browserify -p tsify source/common/index.ts > dist/common/index.bundle.js",
		"build-common-debug": "mkdirp dist/common/ && browserify --debug -p tsify source/common/index.ts > dist/common/index.bundle.js",
		"lint": "tslint -c tslint.json -e 'types/**' 'source/**/*.ts'",
		"start": "http-server",
		"test": "jest --verbose",
		"prepare": "npm run build -s && npm test -s"
	},
	"files": [
		"dist",
		"source",
		"types",
		"index.html",
		"style.css"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/monarch-games/engine.git"
	},
	"author": "Chase Moskal",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/monarch-games/engine/issues"
	},
	"homepage": "https://github.com/monarch-games/engine#readme",
	"devDependencies": {
		"browserify": "16.2.2",
		"http-server": "0.11.1",
		"is-utf8": "0.2.1",
		"mkdirp": "0.5.1",
		"npm-run-all": "4.1.3",
		"rimraf": "2.6.2",
		"tsify": "4.0.0",
		"tslint": "5.10.0",
		"typescript": "2.9.1"
	},
	"dependencies": {
		"@types/jest": "23.0.0",
		"babylonjs": "3.2.0",
		"cannon": "0.6.2",
		"deep-freeze": "0.0.1",
		"earcut": "2.1.3",
		"jest": "23.1.0",
		"jsondiffpatch": "0.3.10",
		"mobx": "5.0.0",
		"nipplejs": "0.7.1",
		"oimo": "1.0.9",
		"uuid": "3.2.1"
	}
}
