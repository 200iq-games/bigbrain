{
	"name": "monarch-engine",
	"version": "0.4.0-dev.4",
	"description": "concept game engine",
	"main": "dist/monarch",
	"types": "dist/monarch.d.ts",
	"scripts": {
		"build": "rimraf dist && run-p build-library build-playground lint && echo Done production build",
		"build-debug": "rimraf dist && run-p build-library build-playground-debug lint && echo Done debug build",
		"build-library": "tsc",
		"build-playground": "mkdirp dist/common/ && browserify -p tsify source/common/index.ts > dist/common/index.bundle.js",
		"build-playground-debug": "mkdirp dist/common/ && browserify --debug -p tsify source/common/index.ts > dist/common/index.bundle.js",
		"lint": "tslint -c tslint.json -e 'source/_archive/**' 'source/**/*.ts'",
		"start": "http-server",
		"test-old": "nyc --reporter=text mocha -- dist/**/*.test.js",
		"test": "exit 0",
		"prepare": "npm run build -s && npm test -s"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/monarch-games/engine.git"
	},
	"author": "Chase Moskal",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/monarch-games/engine/issues"
	},
	"homepage": "https://github.com/monarch-games/engine#readme",
	"devDependencies": {
		"@types/chai": "4.1.2",
		"@types/mocha": "2.2.48",
		"@types/node": "9.4.7",
		"browserify": "16.1.1",
		"chai": "4.1.2",
		"http-server": "0.11.1",
		"is-utf8": "0.2.1",
		"mkdirp": "0.5.1",
		"mocha": "5.0.4",
		"npm-run-all": "4.1.2",
		"nyc": "11.6.0",
		"rimraf": "2.6.2",
		"tsify": "3.0.4",
		"tslint": "5.9.1",
		"typescript": "2.7.2"
	},
	"dependencies": {
		"ammo.js": "file:assets/ammo.js-0.0.2.tgz",
		"babylonjs": "3.2.0-beta.1",
		"deep-freeze": "0.0.1",
		"mobx": "4.1.0",
		"uuid": "3.2.1"
	}
}
