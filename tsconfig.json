{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "source",
		"outDir": "dist",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"source/**/*"
	],
	"exclude": [
		"dist",
		"node_modules",
		"source-archive"
	]
}
